{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2021"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "dist"
  ]
}
